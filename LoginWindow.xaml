<Window x:Class="DentalProApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Autentificare" Height="250" Width="350">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0 0 0 10">
            <TextBlock Text="Utilizator:"/>
            <TextBox Name="txtUsername" Width="250"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0 0 0 10">
            <TextBlock Text="Parolă:"/>
            <PasswordBox Name="txtPassword" Width="250"/>
        </StackPanel>

        <Button Grid.Row="2" Content="Autentificare" Width="120" Click="BtnLogin_Click"/>
    </Grid>
</Window>